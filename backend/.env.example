# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USER=mentorhub_user
DB_PASSWORD=your_secure_password_here
DB_NAME=mentorhub

# SQLAlchemy Connection String (для локальной разработки без Docker)
DATABASE_URL=postgresql://mentorhub_user:your_secure_password_here@localhost:5432/mentorhub

# ==================== REDIS CONFIGURATION ====================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# ==================== JWT AUTHENTICATION ====================
# Измените на длинный случайный ключ в продакшене!
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== APPLICATION SETTINGS ====================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# ==================== FRONTEND CONFIGURATION ====================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=MentorHub
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# ==================== AGORA VIDEO CONFERENCING ====================
# Получить на https://console.agora.io
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here
AGORA_CUSTOMER_ID=your_agora_customer_id
AGORA_CUSTOMER_SECRET=your_agora_customer_secret

# ==================== STRIPE PAYMENT GATEWAY ====================
# Получить на https://stripe.com
STRIPE_API_KEY=sk_test_your_stripe_api_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ==================== ALTERNATIVE PAYMENT: YANDEX.KASSA ====================
# Получить на https://kassa.yandex.ru
YANDEX_SHOP_ID=your_shop_id_here
YANDEX_API_KEY=your_api_key_here
YANDEX_WEBHOOK_SECRET=your_webhook_secret_here

# ==================== AWS S3 STORAGE ====================
# Получить на https://aws.amazon.com
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=mentorhub-bucket
AWS_S3_REGION=us-east-1
AWS_S3_URL=https://mentorhub-bucket.s3.amazonaws.com

# ==================== EMAIL CONFIGURATION ====================
# Gmail
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=True
SMTP_USER=your_gmail@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here

# Альтернатива: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Email настройки
EMAIL_SENDER=noreply@mentorhub.com
EMAIL_SENDER_NAME=MentorHub
ADMIN_EMAIL=admin@mentorhub.com

# ==================== SENTRY ERROR TRACKING ====================
# Получить на https://sentry.io
SENTRY_DSN=your_sentry_dsn_url_here
SENTRY_ENVIRONMENT=development

# ==================== GOOGLE (OAuth) ====================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback/google

# ==================== GITHUB (OAuth) ====================
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:3000/auth/callback/github

# ==================== DISCORD (OAuth) ====================
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback/discord

# ==================== DOCKER & DEPLOYMENT ====================
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80

# Docker compose environment
COMPOSE_PROJECT_NAME=mentorhub

# ==================== CELERY CONFIGURATION ====================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# ==================== LOGGING ====================
LOG_FORMAT=json
LOG_FILE=/var/log/mentorhub/app.log

# ==================== API KEYS (для внешних сервисов) ====================
# Telegram Bot (для уведомлений)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Slack (для уведомлений)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# ==================== PRODUCTION SETTINGS ====================
# Используйте только при развертывании в продакшене!
ENVIRONMENT=production
DEBUG=False
ALLOWED_HOSTS=mentorhub.com,www.mentorhub.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ==================== DATABASE BACKUP ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Каждый день в 2:00 AM UTC

# ==================== MONITORING ====================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# ==================== FEATURE FLAGS ====================
FEATURE_VIDEO_SESSIONS=true
FEATURE_COURSES=true
FEATURE_LIVE_CHAT=true
FEATURE_PAYMENTS=true
FEATURE_EMAIL_NOTIFICATIONS=true
